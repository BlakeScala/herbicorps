<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@color/colorBackground"
    tools:context="com.example.guest.herbicorpsapp.ui.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Herbicorps"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="62dp"
        android:textStyle="bold"
        android:textColor="@color/colorMainTitle"
        android:id="@+id/mainTitle" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/imageView"
        android:src="@drawable/wrap"
        android:layout_below="@+id/favoritesButton"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="26dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Vegan Meal Helper"
        android:textSize="20sp"
        android:id="@+id/subTitle"
        android:layout_below="@+id/mainTitle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Find Recipes"
        android:id="@+id/findButton"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:layout_above="@+id/imageView"
        android:layout_alignLeft="@+id/mainTitle"
        android:layout_alignStart="@+id/mainTitle" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:clickable="true"
        android:text="Contact Herbicorps!"
        android:id="@+id/contactTextView"
        android:layout_marginTop="25dp"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Favorites"
        android:gravity="center"
        android:id="@+id/favoritesButton"
        android:textColor="@color/colorWhite"
        android:textStyle="bold"
        android:padding="5dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="29dp"
        android:layout_below="@+id/subTitle"
        android:layout_toRightOf="@+id/contactTextView"
        android:layout_toEndOf="@+id/contactTextView" />

</RelativeLayout>
